<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace 一定要对应包的dao -->
<mapper namespace="com.einvoice.sell.dao.WholeDao">

	<select id="test" resultType="NewHashMap">
		select * from test where 1=2
	</select>
	
	<select id="getHead" resultType="NewHashMap" parameterType="NewHashMap">
		select * from v_wholesale where sheetid=#{sheetid}
	</select>
	
	<select id="getDetail" resultType="NewHashMap" parameterType="NewHashMap">
		select * from v_wholesaleitem where sheetid=#{sheetid}
	</select>
	
	<select id="getPayment" resultType="NewHashMap" parameterType="NewHashMap">
		select * from v_wholesalepay where sheetid=#{sheetid}
	</select>

</mapper>
